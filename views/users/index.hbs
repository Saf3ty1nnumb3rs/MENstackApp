


<main>

<h1>Whisk(e)y Lovers</h1>
<div class="display-container">
<ul>{{#each users}}
    <div class="card">
        <a href="/users/{{_id}}">
        <img class="soft-image" src="{{img}}" alt="{{name}}">
        <li>{{name}}</li>
        <li>{{country}}</li>
        </a>

<main>
    <div class="card">
        <div>
            <img class="round-image" src="{{whisky.img}}" alt="{{whisky.name}}">
        </div>
        <div class="container">
            <h1>{{whisky.name}}</h1>
            <h2>Aged:</h2>
            <p>{{whisky.yearsAged}}</p>
            <h2>Style</h2>
            <p>{{whisky.style}}</p>
            <h3>{{whisky.originCountry}}</h3>
        </div>
        <br>
        <h4>{{whisky.distillery}}</h4>
        <p> {{whisky.yearMade}} </p>
    </div>
    <div>
        <a href="../">Back to Country</a>
    </div>

    <a href="./{{whisky.id}}/edit">Edit Me</a>
    <form method="POST" action="./{{whisky.id}}?_method=DELETE">
        <button type="submit">Delete This Whisky</button>
    </form>
    </div>
</main>